<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
		 
    <welcome-file-list>
        <welcome-file>getMediaWikiArticle</welcome-file>
    </welcome-file-list>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
	
	<session-config>
        <session-timeout>1</session-timeout>
    </session-config>

	<servlet>
        <servlet-name>Proxy</servlet-name>
        <servlet-class>ra.httpProxy.ProxyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Proxy</servlet-name>
        <url-pattern>/media_wiki/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Proxy</servlet-name>
        <url-pattern>/w/images/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>s1</servlet-name>
        <servlet-class>ra.servlets.getMediaWikiArticle</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>s1</servlet-name>
        <url-pattern>/w/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>s2</servlet-name>
        <servlet-class>ra.servlets.getMediaWikiSearch</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>s2</servlet-name>
        <url-pattern>/s/*</url-pattern>
    </servlet-mapping>


    <!--

        <init-param>
            <param-name>listings</param-name>
            <param-value>false</param-value>
        </init-param>

        <error-page>
            <error-code>500</error-code>
            <location>/server_error.html</location>
        </error-page>
        -->
</web-app>